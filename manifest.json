{
    "manifest_version": 3,
    "name": "WebsiteMasterControls",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Website Master Controls"
    }
}